{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, 
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "types": ["reflect-metadata", "mocha"],
  "include": [
    "src/**/*" 
  ],
  "exclude": [
    "node_modules"
  ]
}
